<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrayBlack"
    tools:context="com.example.restaurant_dinein.Manager_Chef_Order_List">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_displayChefName"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="Chef Name"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_displayOrderStatus"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="Order Status"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_displayNoOfOrders"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="No. of Order(s)"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>