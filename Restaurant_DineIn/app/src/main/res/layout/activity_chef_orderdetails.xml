<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.restaurant_dinein.Chef_OrderDetails_Activity"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/colorTextPrimary"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:text="Order# "
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_OrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:text=" Details"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/chef_order_status_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/image_orderplaced" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Item Name"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_vertical"
            android:textSize="18sp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Qty"
            android:layout_marginLeft="70dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_vertical"
            android:textSize="18sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/ListViewLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:divider="@color/colorWhite"
        android:dividerHeight="10sp"
        android:fadeScrollbars="false"
        android:forceHasOverlappingRendering="true"
        android:padding="4dp"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@color/colorWhite"
        android:scrollbars="vertical"
        android:textFilterEnabled="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="-30dp">

        <Button
            android:id="@+id/button_Close"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_button"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="Close"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_ReadyToServe"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_button"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="Ready to Serve"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

