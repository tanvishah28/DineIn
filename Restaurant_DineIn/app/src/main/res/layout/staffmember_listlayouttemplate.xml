<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    tools:context="com.example.restaurant_dinein.Admin_StaffScreenActivity"
    android:background="@color/colorGrayBlack"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/staff_Image"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_height="80dp"
        android:layout_width="60dp"
        android:src="@drawable/staff_icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/staff_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/staff_Image"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:text="Name"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/staff_Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/staff_Image"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:text="Category"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/staff_MobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/staff_Image"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:text="Mobile No"
            android:textColor="@color/colorTextPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/staff_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/staff_Image"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:text="Password"
            android:inputType="textPassword"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>